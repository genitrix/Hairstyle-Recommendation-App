.card{
  margin-left:12rpx;
  margin-right:12rpx;
  margin-top: 12rpx;
  margin-bottom: 20rpx;
  background: white;
  box-sizing: border-box;
  border-radius: 6rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
}

.card-title{
  font-size: 36rpx;
  font-weight: 600;
  align-self: flex-start;
}

